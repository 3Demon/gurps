<div class='gurps-app {{classes}}'>
  <div class='gurps-3col' style='width: 100%; justify-items: end; align-items: center;'>
    {{#each diceTerm}}
      <div>{{#if this.term.flavor}}{{this.term.flavor}}:{{/if}}</div>
      <label for='{{this.term.id}}' style='padding-right: 8px;'>{{this.term.baseExpression}}</label>
      <input id='{{this.term.id}}' type='text' class='gurps-invalid' value='{{this.text}}' />
    {{/each}}
  </div>
  <div class='button-bar gurps-2col'>
    <button id='roll'><i class='fas fa-dice'></i> {{i18n 'GURPS.rollForMe' 'Roll For Me'}}</button>
    <button id='apply' disabled><i class='fas fa-check'></i> {{i18n 'GURPS.addApply'}}</button>
  </div>
</div>