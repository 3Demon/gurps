<div id='reactions'>
  <div class='itemmenu header' style='padding: 0;'></div>
  <div class='modifier header'>{{i18n 'GURPS.modifier'}}</div>
  <div class='situation header'>
    <div class='reacthead'>
      <span>{{i18n 'GURPS.reaction'}}</span>
      {{#if isEditing}}
        <i class='fas fa-caret-square-down'></i>
      {{/if}}
    </div>
  </div>

  {{#each data.reactions}}
    {{#if ../isEditing}}
      <div class='itemmenu reactmenu' data-key='data.reactions.{{@key}}'>
        <i class='fas fa-times'></i>
      </div>
      <div class='modifier'>
        <input name='data.reactions.{{@key}}.modifier' class='gcs-input-sm4' type='text' value='{{this.modifier}}' />
      </div>
      <div class='situation'>
        <input name='data.reactions.{{@key}}.situation' class='gcs-input' type='text' value='{{this.situation}}' />
      </div>
    {{else}}
      <div class='itemmenu' style='padding: 0;'></div>
      <div class='modifier gmod' data-name='Reaction {{this.situation}}'>{{{displayNumber this.modifier}}}</div>
      <div class='situation'>{{{gurpslink this.situation}}}</div>
    {{/if}}
  {{/each}}
</div>