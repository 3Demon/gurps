<div id='skills' class='gga-table with-notes'>
  <div class='itemmenu header' readonly></div>
  <div class='desc header'>
    <div class='headermenu'>
      <span>{{i18n 'GURPS.skills'}}</span>
      <i class='fas fa-caret-square-down'></i>
    </div>
  </div>
  <div class='sl header'>{{i18n 'GURPS.sl'}}</div>
  <div class='rsl header'>{{i18n 'GURPS.rsl'}}</div>
  <div class='pts header'>{{i18n 'GURPS.abbrevPts' 'Pts'}}</div>
  <div class='ref header'>{{i18n 'GURPS.abbrevRef' 'Ref'}}</div>

  {{#each data.skills}}
    {{#if isEditing}}
      <div class='itemmenu skillmenu' data-key='data.skills.{{@key}}'>
        <i class='fas fa-times'></i>
      </div>
      <div class='desc indent0' data-key='data.skills.{{@key}}'>
        <input name='data.skills.{{@key}}.name' class='gcs-input' type='text' value='{{this.name}}' />
        <div class='list_note'>
          <input name='data.skills.{{@key}}.notes' class='gcs-input' type='text' value='{{this.notes}}' />
        </div>
        <div></div>
      </div>
      <div class='sl' data-key='data.skills.{{@key}}'><input
          name='data.skills.{{@key}}.import'
          class='gcs-input-sm3'
          type='text'
          value='{{this.import}}'
        /></div>
      <div class='rsl' data-key='data.skills.{{@key}}'><input
          name='data.skills.{{@key}}.relativelevel'
          class='gcs-input-sm4'
          type='text'
          value='{{this.relativelevel}}'
        />
      </div>
      <div class='pts' data-key='data.skills.{{@key}}'><input
          name='data.skills.{{@key}}.points'
          class='gcs-input-sm3'
          type='text'
          value='{{this.points}}'
        /></div>
      <div class='ref' data-key='data.skills.{{@key}}'><input
          name='data.skills.{{@key}}.pageref'
          class='gcs-input-sm5'
          type='text'
          value='{{this.pageref}}'
        /></div>
    {{else}}
      <div class='itemmenu' readonly></div>
      <div class='desc indent{{@indent}} skldraggable dblclkedit tooltip-manager' data-key='data.skills.{{@key}}'>
        {{#if (notEmpty this.contains)}}<i class='fas fa-caret-down expandcollapseicon'></i>{{/if}}
        {{#if (notEmpty this.collapsed)}}<i class='fas fa-caret-right expandcollapseicon'></i>{{/if}}
        {{{gurpslink this.name}}}
        {{#if (isFoundryItem this)}}&nbsp;<i
            class='far fas fa-star'
            style='float: right; color: olivedrab; font-weight: 900; padding-top: 3px;'
          ></i>{{/if}}
        {{#if (displayItemHover this)}}
          <div class='tooltippic'><img src='{{this.img}}' /></div>
        {{/if}}
        <div class='list_note skldraggable' data-key='data.ads.{{@key}}'>{{{gurpslink this.notes @root}}}</div>
      </div>
      <div
        class='sl {{rollable this.level}} flex-center'
        data-name='{{this.name}}'
        data-key='data.skills.{{@key}}'
        data-otf='S:"{{this.name}}"'
      >{{this.level}}
      </div>
      <div class='rsl flex-center'>{{this.relativelevel}}</div>
      <div class='pts flex-center'>{{this.points}}</div>
      <div class='ref flex-center'>{{{pdflink this.pageref}}}</div>
    {{/if}}
  {{/each}}
</div>